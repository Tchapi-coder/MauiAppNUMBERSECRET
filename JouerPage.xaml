<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1NUMBERSECRET.JouerPage"
             Title="JouerPage">
    <VerticalStackLayout
            Padding="30,0"
            Spacing="30"
            VerticalOptions="Fill">
        <Image
                Source="find.png"
                HeightRequest="220"
                HorizontalOptions="Center" />
        <Label x:Name="NombreLabel"
                Text="Entry a number"
                TextColor="Fuchsia"
                FontSize="32"
                 HorizontalOptions="Fill"
                HorizontalTextAlignment="Center"/>

        <Entry x:Name="NombreEntry"
               Placeholder="$$$$$"
               PlaceholderColor="LightBlue"
                FontSize="32"
                FontAttributes="Bold"
                HorizontalOptions="Center"/>
        <Button
                 x:Name="DevinerBtn"
                  Text="Guess the Number" 
                  Clicked="DevinerBtn_Clicked"
                  HorizontalOptions="Center"/>
        <Label Text="Ajustez la valeur:" />
             

    </VerticalStackLayout>
</ContentPage>